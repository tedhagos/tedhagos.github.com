source "https://rubygems.org"

# Use the github-pages gem to pin all dependencies to what GitHub actually uses.
# This replaces the explicit "jekyll" gem entry.
gem "github-pages", group: :jekyll_plugins

# Themes and standard plugins
gem "minima", "~> 2.5"
gem "jekyll-feed", "~> 0.12"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"

# Essential for Ruby 3.0+ compatibility (Jekyll 3/4 requires these now)
gem "webrick", "~> 1.8"
gem "rexml", "~> 3.2"

# Windows support
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", "~> 0.1.0", platforms: [:mingw, :mswin, :x64_mingw]
